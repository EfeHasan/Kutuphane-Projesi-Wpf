            <Button ToolTip="Emanet Eklemek İçin tıklayınız" x:Name="Emanet_Ekle1" HorizontalAlignment="Left" Margin="317,59,0,0" VerticalAlignment="Top" Height="90" Width="160" FontFamily="Agency FB" FontSize="24" FontStretch="ExtraExpanded" Click="Emanet_Ekle_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/istockphoto-1248300160-612x612.jpg" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button ToolTip="Emanetleri Görüntülemek İçin Tıklayınız" x:Name="Emanetleri_Görüntüle1" HorizontalAlignment="Left" Margin="316,192,0,0" VerticalAlignment="Top" Height="90" Width="162" FontFamily="Agency FB" FontSize="24" FontStretch="ExtraExpanded" Click="Emanetleri_Görüntüle_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/istockphoto-1248300160-612x612.jpg" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Label Content="Emanet Ekle" HorizontalAlignment="Left" Margin="317,149,0,0" VerticalAlignment="Top" FontSize="20" Height="38" Width="130"/>
            <Label Content="Emanetleri Görüntüle" HorizontalAlignment="Left" Margin="316,284,0,0" VerticalAlignment="Top" FontSize="16" Height="38" Width="162"/>
            <Button x:Name="Kullanici_Ekle1" HorizontalAlignment="Left" Margin="538,59,0,0" VerticalAlignment="Top" Width="160" Height="90" Click="Kullanici_Ekle_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/kullanıcı.png" Stretch="Fill"/>
                </Button.Background>
            </Button>
            <Button x:Name="Kullanicilari_Gor1" HorizontalAlignment="Left" Margin="538,189,0,0" VerticalAlignment="Top" Width="160" Height="90" Click="Kullanicilari_Gor_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/kullanıcı.png"/>
                </Button.Background>
            </Button>
            <Label Content="Kullanıcı Ekle" HorizontalAlignment="Left" Margin="538,151,0,0" VerticalAlignment="Top" FontSize="20" Height="38" Width="130" RenderTransformOrigin="0.518,1.593"/>
            <Label Content="Kullanıcıları Görüntüle" HorizontalAlignment="Left" Margin="538,279,0,0" VerticalAlignment="Top" FontSize="16" Height="38" Width="173"/>

        </Grid>

    </Grid>
</Window>
